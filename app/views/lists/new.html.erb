<h3 class='text-center'>Adding New List</h3>
<div class='row'>
	<div class='col-md-12'>
		<%= form_for(@list, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class='form-group'>
				<div class='control-label col-md-1'>
					<%= f.label :name %> 
				</div>
				<div class='col-md-11'>
					<%= f.text_field :name, class: 'form-control', placeholder: 'Name of list', autofocus: true %> 
				</div>
			</div>

			<div class='form-group'>
				<div class='col-md-offset-1 col-md-11'>
					<%= f.submit class: 'btn btn-primary btn-lg pull-right' %> 
				</div>
			</div> 
		<% end %>
	</div> 
</div>