<list class="list-detail">
	<h1 class="list-detail-title">
		<%= @list.name %>
	</h1>
	
	<div class="glyphicon glyphicon-calendar" id="list-date"> 
		<%= @list.created_at.strftime("%b %d, %Y") %>
	</div>

	<div class="edit-delete">
		<%= link_to "Edit List", edit_list_path(@list), class: "btn btn-primary btn-lg btn-space" %>
		<%= link_to "Delete List", list_path(@list), method: :delete, data: { confirm: "Are you sure you want to delete this list? You will not be able to recover it back!" }, class: "btn btn-danger btn-lg btn-space" %>
		<%= link_to "Move to Trash", list_path(@list,soft_delete: true), method: :delete, data: { confirm: "Are you sure you want to destroy this list? You can find this in Trash!" }, class: "btn btn-info btn-lg btn-space" %>
	</div>
</list>	
<hr>
